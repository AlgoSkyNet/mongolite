PKG_CPPFLAGS = -I. -Iyajl -Ibson -Imongoc -include apple.h \
 -DBSON_COMPILATION -DMONGOC_COMPILATION -DBSON_DISABLE_CHECKS #-DMONGOLITE_DEBUG

SOURCES = $(wildcard yajl/*.c bson/*.c mongoc/*.c *.c)

OBJECTS = $(SOURCES:.c=.o)

PKG_LIBS = -lssl -lcrypto -lsasl2

all: $(OBJECTS)

clean:
	rm -f $(OBJECTS)
